<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="org.easyrpg.player.settings.SettingsVideoActivity">

        <CheckBox
            android:id="@+id/force_landscape_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/force_landscape_mode"
            android:textSize="20sp"/>

        <include layout="@layout/separator"/>

        <!-- Input Layout Managing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/screen_size"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/settings_image_uniform_pixel_size_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uniform_pixel_size_best_image_quality"
            android:textSize="20sp"
            android:paddingHorizontal="5dp"/>
        <RadioButton
            android:id="@+id/settings_image_stretch_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stretch_the_image_wider_image"
            android:textSize="20sp"
            android:paddingHorizontal="5dp"/>
        <include layout="@layout/separator"/>
    </LinearLayout>
</ScrollView>
